# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Configuration files
[*.{toml,ini,cfg}]
indent_style = space
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# PowerShell scripts
[*.ps1]
indent_style = space
indent_size = 4

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# Jupyter notebooks
[*.ipynb]
trim_trailing_whitespace = false

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 2

# .env files
[.env*]
insert_final_newline = false
trim_trailing_whitespace = false
