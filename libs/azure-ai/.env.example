# Azure AI Foundry Agent Wrappers - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# AZURE OPENAI CONFIGURATION (Required)
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# =============================================================================
# AZURE AI FOUNDRY CONFIGURATION (Optional - enables Foundry mode)
# =============================================================================
AZURE_AI_PROJECT_ENDPOINT=https://your-resource.services.ai.azure.com/api/projects/your-project
AZURE_AI_HUB_NAME=your-hub-name
AZURE_AI_PROJECT_NAME=your-project-name
AZURE_LOCATION=eastus
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# Use managed identity (recommended for Azure deployments)
USE_MANAGED_IDENTITY=true

# Service principal authentication (if not using managed identity)
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret

# API key for server authentication
# API_KEY=your-server-api-key

# =============================================================================
# OBSERVABILITY CONFIGURATION
# =============================================================================
# Application Insights (for Azure Monitor tracing)
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...

# LangSmith (for LangChain tracing)
# LANGCHAIN_API_KEY=your-langsmith-key
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_PROJECT=your-project-name

# General tracing settings
ENABLE_TRACING=true
TRACE_CONTENT=true
LOG_LEVEL=INFO

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=*
DEBUG=false
RELOAD=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
USE_AZURE_FOUNDRY=true
ENABLE_IT_AGENTS=true
ENABLE_ENTERPRISE_AGENTS=true
ENABLE_DEEP_AGENTS=true
